{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@audio": ["./src/app/components/audio/index.ts"],
      "@audio/*": ["./src/app/components/audio/*"],
      "@shopping/*": ["./src/app/components/shopping/*"],
      "@chat/*": ["./src/app/components/qq/chat/*"],
      "@admin/*": ["./src/app/admin/*"],
      "@parse/*": ["./src/app/parse/*"],
      "@parse": ["./src/app/parse/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
